{
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": true,
  "plugins": ["prettier-plugin-go-template", "prettier-plugin-css-order"],
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template"
      }
    },
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
